FROM continuumio/miniconda3

WORKDIR /kreation
RUN apt-get update -y && \
    apt-get install -y git
RUN git clone https://github.com/SchulzLab/KREATION

WORKDIR /trans_abyss

COPY kreation_env.yml .
RUN conda env create -f kreation_env.yml

SHELL ["conda", "run", "-n", "kreation", "/bin/bash", "-c"]

RUN conda install -c bioconda transabyss