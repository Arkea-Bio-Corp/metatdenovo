/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args            = Additional arguments appended to command in module.
        ext.args2           = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3           = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix          = File name prefix for output files.
----------------------------------------------------------------------------------------
*/
process {

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: 'copy',
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: SAMPLESHEET_CHECK {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: 'copy',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: CUSTOM_DUMPSOFTWAREVERSIONS {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: 'copy',
            pattern: '*_versions.yml'
        ]
    }

    withName: FASTQC {
        ext.args = '--quiet'
    }

    withName: TRIMGALORE {
        ext.args = '--fastqc'
        publishDir = [
            [
                path: { "${params.outdir}/trimgalore/fastqc" },
                mode: 'copy',
                pattern: "*.{html,zip}"
            ],
            [
                path: { "${params.outdir}/trimgalore" },
                mode: 'copy'
                pattern: "*.txt"
            ]
        ]
    }

    withName: DIGINORM_NORMALIZEBYMEDIAN {
        publishDir = [
            path: { "${params.outdir}/diginorm" },
            mode: 'copy'
            pattern: "*.fastq.gz"
        ],
            path: { "${params.outdir}/diginorm/logs" },
            mode: 'copy',
            pattern: "*.log"
        ]
    }

    withName: DIGINORM_FILTERABUND {
        ext.args = '--variable-coverage'
        publishDir = [
            path: { "${params.outdir}/diginorm" },
            mode: 'copy'
            pattern: "*.fastq.gz"
        ],
            path: { "${params.outdir}/diginorm/logs" },
            mode: 'copy',
            pattern: "*.log"
        ]
    }

    withName: DIGINORM_EXTRACTPAIREDREADS {
        publishDir = [
            path: { "${params.outdir}/diginorm" },
            mode: 'copy'
            pattern: "*.fastq.gz"
        ],
            path: { "${params.outdir}/diginorm/logs" },
            mode: 'copy',
            pattern: "*.log"
        ]
    }

    withName: BBMAP_ALIGN {
        publishDir = [
            path: { "${params.outdir}/bbmap" },
            mode: 'copy'
            pattern: "*.bam"
        ],
            path: { "${params.outdir}/bbmap/logs" },
            mode: 'copy',
            pattern: "*.log"
        ]
    }

    withName: PRODIGAL {
        ext.args = '-p meta'
        publishDir = [
            path: { "${params.outdir}/prodigal" },
            mode: 'copy'
            pattern: "*"
        ]
    }

    withName: PROKKA_CAT {
        publishDir = [
            path: { "${params.outdir}/prokka" },
            mode: 'copy'
            pattern: "*.gz"
        ]
    }
}
